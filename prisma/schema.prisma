generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- EXISTENTES ---
model Category {
  id        String   @id @default(cuid())
  slug      String   @unique
  name      String
  posts     Post[]
  createdAt DateTime @default(now())
}

model Post {
  id         String   @id @default(cuid())
  title      String
  slug       String   @unique
  content    String
  categoryId String
  category   Category @relation(fields: [categoryId], references: [id])
  createdAt  DateTime @default(now())
}

// --- NUEVOS PARA RANKINGS ---
model University {
  id        Int       @id @default(autoincrement())
  name      String
  country   String
  city      String?
  website   String?
  rankings  Ranking[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Ranking {
  id           Int        @id @default(autoincrement())
  year         Int
  position     Int
  source       String
  universityId Int
  university   University @relation(fields: [universityId], references: [id])
  createdAt    DateTime   @default(now())
}
